#!/usr/bin/env node

'use strict';
const argv = require('optimist')
              .boolean('cors')
              .argv;
const masterNodeCapt = require('../lib/masternodecapt');

if (argv.h || argv.help) {
  console.log([
    'usage: masternodecapt install|list|help|service'
  ].join('\n'));
  process.exit();
}

if ( argv.install || argv['install-service'] ){
  masterNodeCapt.install();
} else if ( argv.list ) {
  masterNodeCapt.list();

} else if ( argv.service ) {
  masterNodeCapt.service();

} else {
  console.log("Unknown command");
  console.log([
    'usage: masternodecapt install|list|help'
  ].join('\n'));
}


